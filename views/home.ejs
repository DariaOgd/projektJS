<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizApp</title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/20500f701e.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="top">
            <div class="quizstart">
                
                <a href="/quiz">Rozpocznij quiz</a>

            </div>

            <form action="/add" method="POST">
                <div class="fields">
                    <div class="field1">
                        <label for="concept" class="concept">Pojęcie:</label>
                        <input type="text" name="concept">
                    </div>
                    <div class="field2">
                        <label for="definition" class="def">Definicja</label>
                        <input type="text" name="definition">
                    </div>
                    <button type="submit">Dodaj</button>
    
                </div>
                

            </form>


        </div>
        <div class="questions">

            <% concepts.forEach(concept => { %>
                <div class="card">
                    <div class="left">
                        <div class="concept">
                            <p>Pojęcie: </p>
                            <h3 class="concept"><%= concept.concept %></h3>
                        </div>
                        <div class="def">
                            <p>Definicja: </p>
                            <h3> <%= concept.definition %></h3>
                        </div>

                    </div>
                    
                    
                    <div class="icons">
                        <a href="/edit/<%= concept._id %>"><i class="fas fa-pen"></i></a>
                    <a href="/delete/<%= concept._id %>"><i class="fas fa-trash"></i></a>

                    </div>
                    

                </div>

            <% }); %>

        </div>
    </div>
    
</body>
</html>